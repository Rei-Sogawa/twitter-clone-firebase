{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "predeploy:functions": "yarn remove link:../shared && yarn add file:./shared",
    "postdeploy:functions": "rimraf ./shared && yarn remove file:./shared && yarn add link:../shared",
    "test": "jest"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "10",
    "firebase-functions": "^3.14.1",
    "shared": "link:../shared"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.4.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "private": true
}
